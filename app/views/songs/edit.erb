<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH"
  <label> Artist Name </label>
  <input type="text" name="artist" id="Artist Name" value="<%=@song.artist.name%>"/>
  <label> Song Name </label>
  <input type="text" name="name" id="Name" value="<%=@song.name%>">
  <label>Choose an Genre:</label>

<% Genre.all.each do |genre| %>
  <label><%= genre.name %></label>
  <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>>
<% end %>
    <br>
  <input type="submit" value="Save">
</form>

