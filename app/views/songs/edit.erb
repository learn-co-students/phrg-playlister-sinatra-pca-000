<form method="POST" action="/songs/<%=@song.slug%>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <label>Name</label>
  <input type="text" name="Name" value="<%=@song.name%>">

  <br>

  <label>Artist Name</label>
  <input type="text" name="Artist Name" value="<%=@song.artist.name%>">

  <br>

  <label>Genre(s)</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%=genre.name%>" name="genres[]" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%>
  <% end %>

  <br>

  <input type="submit" value="Save">
</form>
